---
import { Skill } from "../components/Skill";

export interface Props {
  projects: { name: string; logo?: string }[];
  name: string;
}

const { name, projects } = Astro.props;
---

<div
  class="flex justify-center items-center flex-col gap-2 bg-white p-4 shadow-lg rounded text-gray-900"
>
  <p class="font-bold text-center">{name}</p>
  <div
    class="grid gap-2"
    class:list={[
      { "grid-cols-1": projects.length === 1 },
      { "grid-cols-2": projects.length === 2 },
      { "grid-cols-3": projects.length === 3 },
      { "grid-cols-4": projects.length > 3 },
    ]}
  >
    {
      projects.map((skill) =>
        skill.logo ? (
          <Skill client:load logo={skill.logo} name={skill.name} />
        ) : null
      )
    }
  </div>
</div>
