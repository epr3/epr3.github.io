---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Eduard Predescu is a full stack developer from Bucharest, RO specialising in modern JavaScript/Typescript frameworks."
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, minimum-scale=1"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Eduard Predescu" />
    <meta property="og:type" content="website" />
    <meta
      content="Eduard Predescu is a full stack developer from Bucharest, RO specialising in modern JavaScript/Typescript frameworks."
      property="og:description"
    />
    <meta content="https://eduar.dev" property="og:url" />
    <meta content="Eduard Predescu" property="og:title" />
    <title>{title}</title>
    <script
      async
      src="https://analytics.umami.is/script.js"
      data-website-id="340244ab-7019-4fb2-9e74-2c2920afe639"></script>
  </head>
  <body class="bg-dark text-white font-sans py-12">
    <slot />
  </body>
</html>

<style is:global>
  a {
    word-break: break-all;
  }
</style>
