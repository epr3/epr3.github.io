    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@iconify-json/heroicons": "^1.1.20",
    "@iconify-json/logos": "^1.1.42",
    "@typescript-eslint/parser": "^7.7.1",
    "@unocss/preset-icons": "^0.59.4",
